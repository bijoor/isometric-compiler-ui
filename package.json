{
  "name": "isometric-compiler-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://bijoor.github.io/isometric-compiler-ui",
  "scripts": {
    "dev": "vite",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build": "tsc && vite build",
    "build:css": "tailwindcss -i ./src/index.css -o ./src/output.css --watch",
    "build:gh-pages": "tsc && vite build --mode production --base=/isometric-compiler-ui/",
    "predeploy": "npm run build:gh-pages",
    "deploy": "gh-pages -d dist -r git@github.com:bijoor/isometric-compiler-ui.git",
    "serve": "vite preview",
    "start:local": "vite",
    "start:prod": "vite"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slot": "^1.0.1",
    "dotenv": "^16.4.5",
    "lucide-react": "^0.447.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "gh-pages": "^6.1.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  }
}
